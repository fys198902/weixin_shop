<view class="page" style="margin: 10px">
  <view wx:if="{{xianshimap}}">
    <map longitude="{{longitude}}" latitude="{{latitude}}" scale="16" show-location style="width: 100%; height: 210px;"></map>
  </view>
  <textarea style="height: 60px; width: 100%;background-color: white; padding: 5px;margin-top: 10px" placeholder="请输入您的收货地址" bindinput="peisonginput" value="{{peisongdizhi}}" disabled="{{isdisabled}}">
  </textarea>

  <input placeholder="请输入您的联系方式" type="number" style="width: 100%; margin-top: 5px;background-color: white; height: 28px; padding: 5px" bindinput="lianxfsinput" value="{{lianxfs}}"></input>

  <button type="primary" style="margin-top: 50px;width: 100%" bindtap="save">保存</button>



</view>